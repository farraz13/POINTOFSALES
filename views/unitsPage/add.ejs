<%- include('../partials/header') %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">
            <%- include('../partials/sidebar') %>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">
                        <%- include('../partials/topbar') %>

                            <!-- Begin Page Content -->
                            <div class="container-fluid ml-2">

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">Add</h1>

                                <div class="card">

                                    <form class="px-3 py-4" action="/units/add" method="post">
                                        <div class="form-group row">
                                            <label for="unit" class="col-sm-2 col-form-label">Unit</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="unit" id="email">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="name" id="name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="note" class="col-sm-2 col-form-label">Note</label>
                                            <div class="col-sm-10">
                                                <textarea  class="form-control" name="note" id="note"></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-10 ml-5">
                                                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
                                                <a href="/units" class="btn btn-warning"><i class="fa-solid fa-arrow-rotate-left"></i></a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>


                            <%- include('../partials/footer') %>
                    </div>

                </div>
                <!-- End of Main Content -->