<!-- /.container-fluid -->

<%- include('../partials/header') %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">
            <%- include('../partials/sidebar') %>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">
                        <%- include('../partials/topbar') %>

                            <!-- Begin Page Content -->
                            <div class="container-fluid ml-2">

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">EDIT</h1>
                                <div class="card">
                                <form class="px-3 py-4" action="" method="post">
                                    <div class="form-group row">
                                        <label for="email" class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="email" class="form-control" name="email" id="email" value="<%= item.email %>" >
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="name" class="col-sm-2 col-form-label px-3 py-4">Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="name" id="name" value="<%= item.name %>">
                                        </div>
                                    </div>

                                    <fieldset class="form-group row">
                                        <legend class="col-form-label col-sm-2 float-sm-left pt-0">Choose Role</legend>
                                        <div class="col-sm-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="role"
                                                    id="gridRadios1" value="admin" <%= item.role == 'admin' ? 'checked':''  %>>
                                                <label class="form-check-label" for="gridRadios1">
                                                    Admin
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="role"
                                                    id="gridRadios2" value="operator"  <%= item.role == 'operator' ? 'checked':''  %>>
                                                <label class="form-check-label" for="gridRadios2">
                                                    Operator
                                                </label>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="form-group row">
                                        <div class="col-sm-10 offset-sm-2">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-10 ml-5">
                                            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
                                            <a href="/users" class="btn btn-warning"><i class="fa-solid fa-arrow-rotate-left"></i></a>
                                        </div>
                                        
                                    </div>
                                </form>

                            </div>

                          
                          <%- include('../partials/footer') %>
                    </div>
                </div>

                    <!-- End of Main Content -->
